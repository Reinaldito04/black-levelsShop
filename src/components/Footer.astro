<script is:inline>

    // Función para verificar si el elemento está en la vista del usuario
function isElementInViewport(el) {
    var rect = el.getBoundingClientRect();
    return (
        rect.top >= 0 &&
        rect.left >= 0 &&
        rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
        rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
}

// Función para manejar la animación del logo
function handleLogoAnimation() {
    var logo = document.querySelector('.logo');
    if (isElementInViewport(logo)) {
        logo.classList.add('animar');
        setTimeout(function() {
            logo.classList.remove('animar');
            logo.classList.add('Rotar');
        }, 5000); // 5000 milisegundos = 5 segundos
    }
}


// Agregar evento scroll para verificar la visibilidad del logo
window.addEventListener('scroll', function () {
    handleLogoAnimation();
});

// Llamar a la función una vez al cargar la página para verificar el estado inicial
handleLogoAnimation();
</script>