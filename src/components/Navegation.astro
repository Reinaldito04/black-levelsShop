---
import ThemeIcon from "./ThemeIcon.astro";
---

<nav class="navbar navbar-expand-lg navbar-light" id="Navbar">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img src="/LOGO.png" alt="" />
    </a>
   
    <button class="navbar-toggler"  type="button" id="navbar-toggler">
      <div class="bi bi-list" id="Icono"></div>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="#Home">Inicio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#Products">Productos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#Contact">Información</a>
          
        </li>
        <div class="iconoMovil">
            <ThemeIcon />
          </div>
      </ul>
      <div class="ml-auto iconoPC">
        <ThemeIcon />
      </div>
    </div>
  </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function () {
    let navbarToggler = document.getElementById('navbar-toggler');
    let navbarCollapse = document.getElementById('navbarSupportedContent');
    let iconoBoton = document.getElementById('Icono');
    let Navbar = document.getElementById('Navbar');

    navbarToggler.addEventListener('click', function () {
        if (navbarCollapse.classList.contains('show')) {
            navbarCollapse.classList.remove('show');
            navbarCollapse.classList.remove('animated');
            iconoBoton.className = 'bi bi-list'; // Establecer clase del ícono del toggler en estado inicial
            Navbar.classList.remove('Expandir');
        } else {
            navbarCollapse.classList.add('show');
            navbarCollapse.classList.add('animated');
            iconoBoton.className = 'bi bi-x-lg'; // Establecer clase del ícono del toggler en estado expandido
            Navbar.classList.add('Expandir');
        }
    });
});
</script>
<style>


  .iconoMovil {
    display: none;
  }
  @media only screen and (max-width: 1024px) {
    .iconoMovil {
      display: block;
    }
    .iconoPC {
      display: none;
    }
  }
  .animated {
    animation: animateNav 0.5s;
}

@keyframes animateNav {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
  .show {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    transition: all 0.8s;
  }
  #navbarSupportedContent{
   
    transition: height 0.8s;
  }
  .navbar-expand-lg{
    height: auto;

    transition: height 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .Expandir{
    animation: HeightAnimate 0.4s;
  }
@keyframes HeightAnimate {
    from {
        opacity: 0.5;
        height: 0;

    }
    to {
        opacity: 1;
        height: auto;
    }
}


  .navbar{
    transition: all 0.8s;
  }
  nav {
    position: fixed;
    width: 100%;
    z-index: 9999;
    background-color: #f20505;
  }
  
  .navbar-nav {
    margin: 0 auto;
    display: flex;
    justify-content: center;
  }

  li a {
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
  }

  li {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

li::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -2px;
    width: 80%; /* Ajusta el ancho según tus necesidades */
    height: 2px;
    background-color: transparent;
    transition: background-color 0.3s ease-out;
    transform: translateX(-50%); /* Centra el pseudo-elemento */
}

/* Efecto de hover para animar el borde inferior */
li:hover::after {
    background-color: white;
}

  img {
    height: 80px;
    width: 80px;
    display: block;
    animation: animarImagen 5s infinite ease alternate;
  }

  @keyframes animarImagen{
    0%{
        transform: translateY(0);
    }
    50%{
        transform: translateY(-10px);

    }
    100%{
        transform: translateY(10px)
    }

  }

  #Icono {
  transition: transform 0.5s ease-out; /* Aplica la transición al ícono directamente */
}

.navbar-toggler:hover #Icono {
  
  
  transform: rotate(90deg) !important  ;
}

.navbar-toggler:active{
    border: none;
}

.navbar-toggler:focus{
    outline: none;
    border-color: red;
    border: none;
}
  
</style>
